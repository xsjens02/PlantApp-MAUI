<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PlantAppMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PlantAppMAUI"
    xmlns:pages="clr-namespace:PlantAppMAUI.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="PlantAppMAUI">

    <ShellContent
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="HomePage" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:HomeSettingsPage}"
        Route="HomeSettingsPage" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:PlantDisplayPage}"
        Route="PlantDisplayPage" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:PlantCreatePage}"
        Route="PlantCreatePage" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:PlantSettingsPage}"
        Route="PlantSettingsPage" />
</Shell>
